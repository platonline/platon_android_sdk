<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_randomize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/randomize" />

        <EditText
            android:id="@+id/etxt_order_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/order_amount"
            android:importantForAutofill="no"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etxt_order_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/order_description"
            android:importantForAutofill="no"
            android:inputType="text" />

        <EditText
            android:id="@+id/etxt_first_trans_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/first_trans_id"
            android:importantForAutofill="no"
            android:inputType="text" />

        <EditText
            android:id="@+id/etxt_recurring_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/recurring_token"
            android:importantForAutofill="no"
            android:inputType="text" />


        <EditText
            android:id="@+id/etxt_initial_delay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/init_period"
            android:importantForAutofill="no"
            android:inputType="text" />

        <EditText
            android:id="@+id/etxt_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/period"
            android:importantForAutofill="no"
            android:inputType="text" />

        <EditText
            android:id="@+id/etxt_repeat_times"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/repeat_times"
            android:importantForAutofill="no"
            android:inputType="text" />

        <Button
            android:id="@+id/btn_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/schedule" />

    </LinearLayout>

</ScrollView>