<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_randomize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/randomize" />

        <EditText
            android:id="@+id/etxt_order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/order_id"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="30"/>

        <EditText
            android:id="@+id/etxt_order_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/order_amount"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:maxLength="30"/>

        <EditText
            android:id="@+id/etxt_order_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/order_description"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="30"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#232323" />

        <EditText
            android:id="@+id/etxt_payer_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/payer_email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etxt_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/card_number"
            android:importantForAutofill="no"
            android:inputType="number" />

        <EditText
            android:id="@+id/etxt_first_trans_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/first_trans_id"
            android:importantForAutofill="no"
            android:inputType="text" />

        <EditText
            android:id="@+id/etxt_recurring_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/recurring_token"
            android:importantForAutofill="no"
            android:inputType="text" />

        <CheckBox
            android:id="@+id/cb_async"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:text="@string/async_recurring" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_auth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:importantForAutofill="no"
                android:text="@string/recurring_auth" />

            <Button
                android:id="@+id/btn_sale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:importantForAutofill="no"
                android:text="@string/recurring_sale" />
        </LinearLayout>

        <EditText
            android:id="@+id/etxt_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/response"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="200dp" />

    </LinearLayout>

</ScrollView>