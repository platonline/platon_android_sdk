<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etxt_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/order_id"
                android:importantForAutofill="no"
                android:inputType="text" />

            <EditText
                android:id="@+id/etxt_order_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/order_amount"
                android:importantForAutofill="no"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/etxt_order_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/order_description"
                android:importantForAutofill="no"
                android:inputType="text" />

            <EditText
                android:id="@+id/etxt_order_currency_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/order_currency_code"
                android:importantForAutofill="no"
                android:inputType="text" />

            <EditText
                android:id="@+id/etxt_payer_country_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payer_country_code"
                android:importantForAutofill="no"
                android:inputType="text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#232323" />

            <EditText
                android:id="@+id/etxt_payer_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payer_first_name"
                android:importantForAutofill="no"
                android:inputType="text" />

            <EditText
                android:id="@+id/etxt_payer_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payer_last_name"
                android:importantForAutofill="no"
                android:inputType="text" />

            <EditText
                android:id="@+id/etxt_payer_middle_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payer_middle_name"
                android:importantForAutofill="no"
                android:inputType="text" />

            <EditText
                android:id="@+id/etxt_payer_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payer_birthday"
                android:importantForAutofill="no"
                android:inputType="text" />

            <EditText
                android:id="@+id/etxt_payer_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payer_address"
                android:importantForAutofill="no"
                android:inputType="text" />

            <EditText
                android:id="@+id/etxt_payer_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payer_state"
                android:importantForAutofill="no"
                android:inputType="text" />


            <EditText
                android:id="@+id/etxt_payer_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payer_city"
                android:importantForAutofill="no"
                android:inputType="text" />

            <EditText
                android:id="@+id/etxt_payer_zip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payer_zip"
                android:importantForAutofill="no"
                android:inputType="text" />

            <EditText
                android:id="@+id/etxt_payer_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payer_email"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/etxt_payer_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payer_phone"
                android:importantForAutofill="no"
                android:inputType="phone" />

            <EditText
                android:id="@+id/etxt_payer_ip_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payer_ip_address"
                android:importantForAutofill="no"
                android:inputType="text" />

            <EditText
                android:id="@+id/etxt_channel_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/channel_id"
                android:importantForAutofill="no"
                android:inputType="text" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_async"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/async_sale" />

        <CheckBox
            android:id="@+id/cb_auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auth" />

        <CheckBox
            android:id="@+id/cb_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/black" />

        <CheckBox
            android:id="@+id/cb_with_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/with_text" />

        <CheckBox
            android:id="@+id/cb_shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shadow_only_for_white_button" />

        <com.platon.sdk.widget.GooglePayButton
            android:id="@+id/google_pay_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            app:black="false"
            app:shadow="true"
            app:withText="true" />

        <TextView
            android:id="@+id/tx_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:minHeight="200dp"
            android:text="@string/response" />

    </LinearLayout>
</ScrollView>